<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:JumpStart.Model"
             x:Class="JumpStart.JobOfferFeedPage">
    <VerticalStackLayout Spacing="20" Padding="10">
        <CollectionView x:Name="JobsCollectionView">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <StackLayout>
                    <Label Text="{Binding jobTitle}" FontSize="24" />
                        <Label Text="{Binding jobDescription}" />
                    <Label Text="{Binding salaryPerMonth}" />
                        <Label Text="{Binding offeredBy.profile}"/>

                   </StackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
    </VerticalStackLayout>
</ContentPage>


