<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JumpStart.RegisterPage">

    <VerticalStackLayout Spacing="20" Padding="10">
        <Label FontSize="40" HorizontalTextAlignment="Center" Text="JumpStart"/>
        <Entry x:Name="emailEntry" Placeholder="Enter your Email" Keyboard="Email"/>
        <Entry x:Name="nameEntry" Placeholder="Enter your Name"/>
        <Entry x:Name="passwordEntry" Placeholder="Enter your Password" IsPassword="True"/>

        <Picker x:Name="userTypePicker">
            <Picker.Items>
                <x:String>Job Seeker</x:String>
                <x:String>Employer</x:String>
            </Picker.Items>
        </Picker>
        
        <Button Text="Register" Clicked="OnRegisterClicked"></Button>
        <Button Text="Login" Clicked="OnLoginClicked"></Button>
    </VerticalStackLayout>
</ContentPage>
